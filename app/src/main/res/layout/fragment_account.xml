<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"
            android:contentDescription="Immagine profilo"/>

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Cognome"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:id="@+id/textViewUserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: standard"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio: ..."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewUserAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EtÃ : 25"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewUserJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lavoro attuale: Sviluppatore"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewUserPastJobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lavori passati: Designer, Tester"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commenti lasciati alle aziende:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUserReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"/>

        <Button
            android:id="@+id/buttonEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica profilo"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>

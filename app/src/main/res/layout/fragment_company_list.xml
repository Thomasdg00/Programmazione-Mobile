<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Spinner
            android:id="@+id/spinnerSector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:prompt="@string/prompt_settore" />
        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:prompt="@string/prompt_localita" />
    </LinearLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewCompanies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Cerca azienda..."/>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCompanies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonAddCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aggiungi Azienda"/>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Immagine profilo -->
    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/sharp_account_circle_24"
        android:scaleType="centerCrop" />

    <!-- Contenuto a destra dell’immagine -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- Riga: nome utente + badge -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textUsername"
                android:text="NomeUtente"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_home_black_24dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Testo del commento -->
        <TextView
            android:id="@+id/textComment"
            android:text="Questo è un commento di esempio."
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Azioni: like, rispondi -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textLikes"
                android:text="👍 24"
                android:layout_marginEnd="16dp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textReply"
                android:text="Rispondi"
                android:textColor="#2196F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>